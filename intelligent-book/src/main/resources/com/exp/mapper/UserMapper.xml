<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.exp.mapper.UserMapper">

    <!-- 书籍查询 -->
    <select id="bookList" resultType="com.exp.pojo.Book">
        select *
        from tb_book
        <where>
            <if test="name != null and name != ''">name like concat('%', #{name}, '%')</if>
            <if test="author != null and author != ''">author like concat('%', #{author}, '%')</if>
            <if test="press != null and press != ''">press like concat('%', #{press}, '%')</if>
            <if test="language != null and language != ''">language like concat('%', #{language}, '%')</if>
            <if test="lowerPrice != null and end != null">and price between #{lowerPrice} and #{upperPrice}</if>
            <if test="beginPubDate != null and endPubDate != null">and pub_date between #{beginPubDate} and #{endPubDate}</if>
        </where>
        order by stars desc, lend_frequency desc, update_time desc
    </select>

    <!-- 更新用户信息 -->
    <update id="updateUser">update tb_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="image != null and image != ''">
                image = #{image},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime}
            </if>
        </set>
        where id = #{id}
    </update>

    <!-- 设置已读 -->
    <update id="setIsRead"> update tb_notification
        set is_read = 1
        where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </update>

    <!-- "删除" -->
    <update id="setIsVisual"> update tb_notification
        set is_visual = 0
        where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </update>



</mapper>